<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.wit.supplyco.views.supplier.SupplierView">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colourOne"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colourPrimary"
                android:fitsSystemWindows="true"
                app:elevation="0dip"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarAdd"
                    style="@style/ToolbarLayout"
                    android:visibility="invisible">

                <TextView
                        android:id="@+id/supplierActivityTitle"
                        android:text="@string/toolbar_title_add_supplier"
                        style="@style/ToolbarTextView" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
                android:id="@+id/supplierScrollView"
                style="@style/ScrollView"
                android:visibility="invisible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                    <ImageView
                            android:id="@+id/supplierImage"
                            app:srcCompat="@drawable/ic_launcher_background"
                            style="@style/ImageView" />

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="@string/name"
                                style="@style/HeadingTextView"
                                android:paddingHorizontal="5dp" />

                        <EditText
                                android:id="@+id/supplierName"
                                android:hint="@string/hint_supplierName"
                                style="@style/EditText" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="@string/description"
                                style="@style/HeadingTextView"
                                android:paddingHorizontal="5dp" />

                        <EditText
                                android:id="@+id/supplierDescription"
                                android:hint="@string/hint_supplierDescription"
                                style="@style/EditText" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingHorizontal="5dp">

                        <TextView
                                android:text="@string/contact"
                                style="@style/HeadingTextView" />

                        <EditText
                                android:id="@+id/supplierContact"
                                android:hint="@string/hint_supplierContact"
                                style="@style/EditText" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="5dp">

                        <TextView
                                android:text="@string/email"
                                style="@style/HeadingTextView" />

                        <EditText
                                android:id="@+id/supplierEmail"
                                android:hint="@string/hint_supplierEmail"
                                style="@style/EditText" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="@string/address"
                                style="@style/HeadingTextView"
                                android:paddingHorizontal="5dp" />

                        <EditText
                                android:id="@+id/supplierAddress"
                                android:hint="@string/hint_supplierAddress"
                                style="@style/EditText" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                        android:id="@+id/buttonAddSupplier"
                        android:text="@string/button_addSupplier"
                        style="@style/Button"
                        app:cornerRadius="10dp" />

                <Button
                        android:id="@+id/buttonDeleteSupplier"
                        android:text="@string/button_deleteSupplier"
                        style="@style/Button"
                        android:backgroundTint="@color/colourSecondary"
                        app:cornerRadius="10dp"
                        android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
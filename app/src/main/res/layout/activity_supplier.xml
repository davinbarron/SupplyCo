<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.wit.supplyco.activities.SupplierActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkCerulean"
                android:fitsSystemWindows="true"
                app:elevation="0dip"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:titleTextColor="@color/SmokeyBlack" >

                <TextView
                        android:text="@string/toolbar_title_add_supplier"
                        style="@style/ToolbarTextView" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/appBarLayout"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <EditText
                        android:id="@+id/supplierName"
                        android:autofillHints="hint"
                        android:hint="@string/hint_supplierName"
                        style="@style/EditText" />

                <EditText
                        android:id="@+id/supplierDescription"
                        android:autofillHints="hint"
                        android:hint="@string/hint_supplierDescription"
                        style="@style/EditText" />

                <EditText
                        android:id="@+id/supplierContact"
                        android:autofillHints="hint"
                        android:hint="@string/hint_supplierContact"
                        style="@style/EditText" />

                <EditText
                        android:id="@+id/supplierEmail"
                        android:autofillHints="hint"
                        android:hint="@string/hint_supplierEmail"
                        style="@style/EditText" />

                <EditText
                        android:id="@+id/supplierAddress"
                        android:autofillHints="hint"
                        android:hint="@string/hint_supplierAddress"
                        style="@style/EditText" />

                <Button
                        android:id="@+id/buttonAddSupplier"
                        android:text="@string/button_addSupplier"
                        style="@style/Button" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

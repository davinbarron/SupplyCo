<?xml version="1.0" encoding="utf-8"?>

<!-- Style resource to define the format and look of UI elements -->
<!-- https://developer.android.com/guide/topics/resources/style-resource -->

<resources>
    <style name="EditText">
        <item name="android:background">@drawable/rounded_rectangles</item>
        <item name="android:textColor">@color/colourFour</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">25</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/colourPrimary</item>
        <item name="android:textColor">@color/colourOne</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:backgroundTint">@color/colourSecondary</item>
        <item name="android:textColor">@color/colourOne</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTextView">
        <item name="android:textColor">@color/colourOne</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadingTextView">
        <item name="android:textColor">@color/colourPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textColor">@color/colourFour</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ScrollView">
        <item name="android:background">@color/colourBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_below">@id/appBarLayout</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:background">@color/colourPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RecyclerViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@color/colourBackground</item>
    </style>

    <style name="SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colourOne</item>
        <item name="android:textColor">@color/colourFour</item>
        <item name="android:queryHint">Search suppliers...</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
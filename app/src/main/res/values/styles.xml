<?xml version="1.0" encoding="utf-8"?>

<!-- Style resource to define the format and look of UI elements -->
<!-- https://developer.android.com/guide/topics/resources/style-resource -->

<resources>
    <style name="EditText">
        <item name="android:background">@drawable/rounded_rectangles</item>
        <item name="android:textColor">@color/SmokeyBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">25</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/PhilippineGold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadingTextView">
        <item name="android:textColor">@color/DarkCerulean</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textColor">@color/SmokeyBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SupplyCo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand -->
        <item name="colorPrimary">@color/colourPrimary</item>
        <item name="colorOnPrimary">@color/colourOnPrimary</item>

        <item name="colorSecondary">@color/colourSecondary</item>
        <item name="colorOnSecondary">@color/colourOnSecondary</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/colourBackground</item>
        <item name="colorOnBackground">@color/colourOnBackground</item>

        <item name="colorSurface">@color/colourSurface</item>
        <item name="colorOnSurface">@color/colourOnSurface</item>

        <!-- Error -->
        <item name="colorError">@color/colourError</item>
        <item name="colorOnError">@color/colourOnError</item>
    </style>

    <style name="Theme.SupplyCo" parent="Base.Theme.SupplyCo" />

    <style name="Theme.SupplyCo.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colourBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_supplyco_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.SupplyCo</item>
    </style>
</resources>
